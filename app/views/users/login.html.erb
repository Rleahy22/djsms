<div class="container">
	<h1>DJ SMS</h1>

	<%= form_for @user do |f| %>
		
		<%= f.label :username, "USERNAME" %>
		<%= f.text_field :username %>

		<%= f.label :password, "PASSWORD" %>
		<%= f.password_field :password %>
		
		<%= f.submit "Sign In / Sign Up", class: "submit" %>
	<% end %>
</div>