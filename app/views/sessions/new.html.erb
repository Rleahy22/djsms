<div class="loading-dj">
	<h2 id="warming">DJ SMS Is Warming Up...</h1>
	<%= image_tag("dj.gif", id: "loading-image") %>
</div>
<div class="container">
	<h1>DJ SMS</h1>
	<%= form_for(:session, url: sessions_path, html: {class: "login"}) do |f| %>

		<%= f.label :email, "EMAIL", class: "signin-label" %>
		<%= f.text_field :email %>

		<%= f.label :password, "PASSWORD", class: "signin-label" %>
		<%= f.password_field :password %>
		
		<%= f.submit "Sign In", class: "submit" %>
		<%= link_to "Sign Up", new_user_path, class: "sign-up" %>
	<% end %>

	<%= content_tag "div", id: "active", data: {active: @redirect, user: @user} do %>
	<% end %>
	<p><%= @redirect %></p>
</div>